properties([pipelineTriggers([githubPush()])])

pipeline {
    agent any
    environment {
        BRANCH_NAME = "staging"
        DOCKER_IMAGE = "test"
        dockerhub = credentials('dockerhub')
        DOCKERHUB_CREDENTIALS_PSW = 'TimeGroup13'
        DOCKERHUB_CREDENTIALS_USR = 'pashik'
    }
    
    options { 
        buildDiscarder(logRotator(numToKeepStr: '5')) 
    }

   
    stages {
        stage("Cloning Git") {
            steps {
                echo "Checkout to ${BRANCH_NAME}"
                git([url: "https://github.com/ppashik21/test_py.git", branch: env.BRANCH_NAME, credentialsId: "ppashik21"])
 
            }
        }
        
        stage("Build") {
            steps {
                script {
                    echo "Build stage"
                    app = docker.build(env.DOCKER_IMAGE)
                }
            }
        }
        
        stage("Backup") {
            steps {
                sh 'docker tag test pashik/test2'
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh 'docker push pashik/test2'
      }
    }
    
        stage ("Deploy") {
            steps {
                echo " ============== startuem =================="
                dir ('.') {
                	sh 'docker run -d -p 1233:80 test'
                }
        }
    }
    }
    
    post {
        success {
            echo "Remove unused local Docker image"
            sh "docker rmi $DOCKER_IMAGE:$BUILD_NUMBER-$BRANCH_NAME"
        }
    }
} 
